{
    "manifest_version": 3,
    "name": "ChatGPT Cover Letter Generator",
    "version": "1.0",
    "description": "This Chrome Extension uses ChatGPT to generate cover letters based on the user's resume details and the job requirements they provide.",
    "icons": {
      "32": "logo/logo-32.png",
      "48": "logo/logo-48.png",
      "16": "logo/logo-16.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "action": {
        "default_title": "ChatGPT Cover Letter Generator",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://api.openai.com/"
    ],
    "content_security_policy": {
      "extension_pages": "default-src 'self'; connect-src https://api.openai.com/; object-src 'self'"
    }
  }
  